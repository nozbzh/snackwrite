<h1>There is an unfinished contest for the word <%= @unfinished_contests.first.topic.word %>!</h1>
<p><%= @unfinished_contests.first.topic.definition %></p>
<p class="thin-font">
  <%= @unfinished_contests.first.users.first.name %> wrote:
  <br>
  <%= @unfinished_contests.first.posts.first.content %>
</p>
<%= simple_form_for [@contest, @post], url: post_contest_path(@contest) do |f| %>
  <%= f.error_notification %>
  <%= f.input :content, required: true %>
  <%= f.button :submit, "Send", class: "btn btn-primary" %>
<% end %>

